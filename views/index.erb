<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Sinatra &amp; ZingChart</title>
	<!-- We're loading ZingChart from the CDN -->
	<script src="http://cdn.zingchart.com/zingchart.min.js"></script>
</head>
<body>
	<div id="chart"></div>
	<script>
	// We're making an object of chart data for ZingChart to use
	var chart_data = {
		// We set the type to be whatever is passed through the type param
		"type": '<%= type %>',
		"title": {
			// We set the title to be whatever is passed through the title param
			"text": '<%= title %>'
		},
		"series": [
		// Here we're iterating over the series array and making
		// a values array for ZingChart to use.
		<% series.each do |s| %>
			{ "values": <%= s %> },
		<% end %>
		]
	};

	zingchart.render({
		id: "chart",
		width: "100%",
		height:400,
		// Here we pass the chart_data object above
		// to the ZingChart render function.
		data: chart_data
	});

	</script>
</body>
</html>